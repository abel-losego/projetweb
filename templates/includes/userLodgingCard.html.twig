{% block body %}

    <div class="onebox">
        <div class="myreservationpicbox">
        <img  class="myreservationpic" src="{{ lodging.picture}}" alt="Generic placeholder image">
        </div>
        <div class="rightinfo">
            <div>
            <div class="address">{{lodging.fullAddress}}</small></div>
            <div class="stats">
                <span><i class="fa fa-arrows-alt"></i>{{ lodging.name}} </span>
