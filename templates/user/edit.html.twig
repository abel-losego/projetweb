{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Modifier{% endblock %}
{% block stylesheets  %}
  <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
  <style>
    html,
    body {
      padding: 0;
      margin: 0;
    }

    .top {
      width: 100%;
      background: red;
      height: 300px;
      overflow: hidden;
      position: relative;
    }

    .top .top-bg {
      width: 100%;
      height: 400px;
    }

    .data-container {
      width: 600px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: space-around;
      position: absolute;
      right: 0;
      top: 0
    }

    .data-container .el-button {
      width: 100px;
      height: 40px;
      border-radius: 20px;
      border-color: #fcfdfb;
      background: #fcfdfb;
      display: flex;
      align-items: center;
      padding: 0;
      justify-content: space-around;
    }

    .bottom {
      background: rgb(246, 246, 246);
      padding-top: 30px;
      height: 1300px;
      padding-left: 10%;
    }

    .left {
      margin: 0 50px;
      float: left;
      width: 300px;
      height: auto;
      border-radius: 40px;
      border: 1px solid rgb(216, 216, 216);
      text-align: center;
      padding: 40px 20px;
    }

    .left-img-container {
      display: inline-block;
      width: 180px;
      height: 180px;
      border-radius: 100px;
      overflow: hidden;
    }

    .left .left-item {
      margin-top: 35px;
      text-align: left;
    }

    .left .left-line {
      margin-top: 35px;
      width: 300px;
      margin-left: -20px;
      height: 1px;
      background: rgb(216, 216, 216);
    }

    .right {
      overflow: hidden;
    }

    .right-item {
      margin-top: 20px;
      margin-left: 60px;
      font-size: 20px;
      overflow: hidden;
    }

    .right-item .item-top {
      font-weight: bold;
      margin-bottom: 10px;
    }

    .right-item .el-input {
      width: 300px;

    }

    .el-input__inner {
      border-color: #cccccc;
    }

    .right-item .line-throw {
      float: left;
      margin-right: 40px;
    }

    .numberSelect {
      display: inline-block;
      height: 40px;
      line-height: 30px;
      color: #aaaaaa;
      margin-right: 5px;
      position: absolute;
      left: 7px;
      z-index: 999;
      border-right: 1px solid #cccccc;
      padding: 5px;
    }

    .numberSelect-container .el-input__inner {
      padding-left: 72px;
    }

    .btn-container {
      width: 50%;
      margin-top: 150px;
      display: flex;
      align-items: center;
      justify-content: space-around;
    }

    .left-img {
      width: 180px;
      height: 180px;
      display: flex;
      border-radius: 50%;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .left .isActive{
      color: red;
      text-decoration: underline;
    }

    .left a{
      color: black;
    }

    .vich-image img{
      width: 150px;
      height: 150px;
    }
  </style>
{% endblock %}

