{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        *::selection{
            background-color: lightgreen;
            color: orange;
        }
        body{
            margin: 0px;
            padding: 0px;
            background: linear-gradient(to bottom, #514A9D, #24C6DC) no-repeat;
        }

        section.container {
            padding-top: 130px;
        }

        #popup{
            display: block;
            position: fixed;
            z-index: 9;
            padding-top: 3%;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.8);
        }
        #popup_content{
            margin: 2px auto;
            position: relative;
            border: 2px solid rgba(133, 104, 73, 0.9);;
            width: 50%;
            height: auto;
            background-color: white;
        }
        #popup_content form *{
            display: inline-block;
            /* margin: auto;*/
        }

        #popup_content img{
            width: 100%;
            height: 350px;
        }


        #close_popup{
            position: absolute;
            top: 0px;
            right: 0px;
        }
        #close_popup img{
            width: 20px;
            height: 25px;
        }
        #close_popup img::selection{
            display: none;
        }
        #close_popup:hover, #close_popup:focus{
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

        .ligneinformation
        {
            display: inline-block;
            width: 100%;
            height: 100%;

        }
        .informations{
            display: inline-block;
            float: left;
            margin-left: 100px;
        }

        .description{
            display: block;
            border: 2px solid black;
        }

        #re{
            text-align: center;
            font-size: 30px;
        }

        .infos {
            background-color: #fff;
            border-radius: 0 0 10px 10px;
        }

        .lignedates{
            width: 100%;
            margin-top: 10px;
        }

        .dates{
            display: block;
            width: 400px;
            margin: 0 auto;

        }

        .reserver{
            float: right;
        }

        .surligne{
            text-decoration: underline;
            font-size: 18px;
        }
        .photo{
            width: 100%;
            height: 300px;
            border-radius: 10px 10px 0 0;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/litepicker/dist/css/litepicker.css"/>
{% endblock %}
{% block body %}

<section class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-8 p-0"><img class="photo" src="https://images.pexels.com/photos/186077/pexels-photo-186077.jpeg?h=350&auto=compress&cs=tinysrgb" id="photo"></div> 
        <!-- src="\{\{ lodging.picture \}\}" -->
        <div class="row text-center justify-content-center col-8 infos">
            <div class="col-2 "><span><i class="fa fa-user font-weight-bold"></i><br> {{ lodging.capacity }}</span></div>
            <div class="col-2"><span><i class="fa fa-arrows-alt font-weight-bold"></i><br>  {{ lodging.space}} m2</span></div>
            <div class="col-2"><span><i class="fa fa-wifi font-weight-bold"></i><br>  {{ lodging.internetAvailable ? 'oui' : 'non' }} </span></div>
        </div>
        <div class="col-8 p-0">
            <p>RÃ‰SERVER :</p>
        </div>
    </div>
</section>

<input type="text" name="literange" id="literange" />


{% endblock %}

{% block javascripts %}

<script src="https://cdn.jsdelivr.net/npm/litepicker/dist/bundle.js"></script>



<script>
  const picker = new Litepicker({
    element: document.getElementById('literange'),
    singleMode: false,
    numberOfMonths: 2,
    numberOfColumns:2,
    lang: "fr-FR",
    minDate: new Date(),
    resetButton: true,
    disallowLockDaysInRange: true,
    lockDays: ['2021-02-14', '2021-02-18']
  });
</script>


{% endblock %}