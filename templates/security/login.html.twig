{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ "loginTitle" | trans }}{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.min.css" rel="stylesheet">
    
{% endblock %}

{% block body %}
<div class="registration-form">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {{ "registeredAs" | trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ "logout" | trans }}</a>
            </div>
        {% endif %}

        <div class="form-icon">
            <span><i class="icon icon-user"></i></span>
        </div>

        <h1 class="h3 mb-3 font-weight-normal">{{ "login" | trans }}</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control item" required autofocus>
        <label for="inputPassword">{{ "password" | trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control item" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> {{ "rememberMe" | trans }}
            </label>
        </div>

        <button class="btn btn-block next-step" type="submit">
            {{ "login" | trans }}
        </button>

        <a class="btn btn-block next-" href="{{ path('security_registration')}}">
            {{ "register" | trans }}
        </a>
    </form>
</div>
{% endblock %}
